@model ThomasGregTest.ViewModels.VM.LogradouroViewModels

@using (Html.BeginForm("Index", "Logradouro", FormMethod.Post, new { @id = "form-logradouro", @name = "form-logradouro" }))
{
    @Html.HiddenFor(model => model.LogradouroId)
<div class="col-lg-12">
    <div class="row">
        <h2>Logradouro</h2>
        <div class="row">
            <div class="col-lg-12">
                <div class="col-lg-6">
                    <label>Logradouro</label>
                    @Html.EditorFor(model => model.LogradouroNome, new { htmlAttributes = new { @class = "form-control" } })
                </div>
                <div class="col-lg-6">
                    <label>Cliente</label>
                    @Html.DropDownList("ClienteId", null, string.Empty, new { @class = "form-control" })
                </div>
            </div>
            <h1></h1>
            <div class="row">
                <div class="col-lg-12">
                    <input type="submit" class="btn btn-success" value="Salvar" />
                </div>
            </div>
        </div>
    </div>
    <h1></h1>
    <div class="row">
        <div class="col-lg-12">
            <table class="table table-hover table-bordered">
                <tr>
                    <th>
                        Logradouro ID
                    </th>
                    <th>
                        Logradouro
                    </th>
                    <th>
                        Cliente
                    </th>
                    <th>

                    </th>
                    <th>

                    </th>
                </tr>
                @foreach (var item in Model.ListaLogradouroViewModels)
                {
                    <tr>
                        <td>
                            @item.LogradouroId
                        </td>
                        <td>
                            @item.LogradouroNome
                        </td>
                        <td>
                            @item.ClienteViewModels.Nome
                        </td>
                        <td>
                            @Html.ActionLink("Deletar", "Delete", new { id = item.LogradouroId }, new { @class = "text-danger" })
                        </td>
                        <td>
                            @Html.ActionLink("Editar", "Index", new { id = item.LogradouroId })
                        </td>
                    </tr>
                }
            </table>
        </div>
    </div>
</div>
}
