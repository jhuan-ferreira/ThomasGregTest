@model ThomasGregTest.ViewModels.VM.ClienteViewModels

@using (Html.BeginForm("Index","Cliente", null,FormMethod.Post, new {@id = "form-index", @name = "form-index"}))
{
    @Html.HiddenFor(model => model.ClienteId)

<div class="col-lg-12">
    <div class="row">
        <h2>Cliente</h2>
        <div class="row">
            <div class="col-lg-12">
                <div class="col-lg-3">
                    <label>Nome</label>
                    @Html.EditorFor(model => model.Nome, new { htmlAttributes = new { @class = "form-control" } })
                </div>
                <div class="col-lg-3">
                    <label>E-Mail</label>
                    @Html.EditorFor(model => model.Email, new { htmlAttributes = new { @class = "form-control" } })
                </div>
                <h1></h1>
                <div class="col-lg-12">
                    <div class="row">
                        <div class="col-lg-12">
                            <input type="submit" class="btn btn-success" value="Salvar" />
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <h1></h1>
    <div class="row">
        <div class="col-lg-12">
            <table class="table table-hover table-bordered">
                <tr>
                    <th>
                        Cliente ID
                    </th>
                    <th>
                        Nome
                    </th>
                    <th>
                        E-Mail
                    </th>
                    <th>

                    </th>
                    <th>

                    </th>
                </tr>
                @foreach (var item in Model.ListaClienteViewModels)
                    {
                <tr>
                    <td>
                        @item.ClienteId
                    </td>
                    <td>
                        @item.Nome
                    </td>
                    <td>
                        @item.Email
                    </td>
                    <td>
                        @Html.ActionLink("Deletar", "Delete", new {id = item.ClienteId}, new {@class = "text-danger"})
                    </td>
                    <td>
                        @Html.ActionLink("Editar", "Index", new { id = item.ClienteId })
                    </td>
                </tr>
                    }
            </table>
        </div>
    </div>
</div>
}



